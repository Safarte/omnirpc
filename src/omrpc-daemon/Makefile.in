TOPDIR          = @TOPDIR@
MKRULESDIR      = @MKRULESDIR@

include $(MKRULESDIR)/vars.mk

SRCS = omrpc_daemon_main.c omrpc_daemon_job.c 

OBJS = omrpc_daemon_main.o omrpc_daemon_job.o 

LIBS = -L../libomrpc -lomrpc_stub -lomrpc_io @SOCK_LIBS@ -lpthread  \
	@GLOBUS_LIBS@

TARGET = omrpc-daemon

all: $(TARGET)

